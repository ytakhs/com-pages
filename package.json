{
  "name": "remix-template-cloudflare-pages",
  "private": true,
  "sideEffects": false,
  "scripts": {
    "build": "run-p build:* && remix build",
    "build:content": "ts-node ./scripts/buildContent.ts",
    "build:feed": "ts-node ./scripts/buildFeed.ts",
    "build:css": "postcss styles --base styles --dir app/styles --env production",
    "dev:remix": "remix watch",
    "dev:wrangler": "cross-env NODE_ENV=development wrangler pages dev ./public",
    "dev": "yarn run build && run-p dev:*",
    "start": "cross-env NODE_ENV=production npm run dev:wrangler"
  },
  "lint-staged": {
    "*.{js,ts,tsx}": "eslint --fix",
    "*.{js,ts,tsx,css,json}": "prettier --write"
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^6.2.0",
    "@fortawesome/free-solid-svg-icons": "^6.2.0",
    "@fortawesome/react-fontawesome": "^0.2.0",
    "@remix-run/cloudflare": "^1.6.8",
    "@remix-run/cloudflare-pages": "^1.7.0",
    "@remix-run/react": "^1.7.0",
    "cross-env": "^7.0.3",
    "date-fns": "^2.29.2",
    "marked": "^4.0.19",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-syntax-highlighter": "^15.5.0",
    "zod": "^3.18.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^3.14.1",
    "@remix-run/dev": "^1.7.0",
    "@remix-run/eslint-config": "^1.7.0",
    "@types/marked": "^4.0.6",
    "@types/react": "^18.0.24",
    "@types/react-dom": "^18.0.6",
    "@types/react-syntax-highlighter": "^15.5.5",
    "@types/xml": "^1.0.8",
    "@typescript-eslint/eslint-plugin": "^5.35.1",
    "@typescript-eslint/parser": "^5.36.1",
    "autoprefixer": "^10.4.8",
    "eslint": "^8.23.0",
    "eslint-config-prettier": "^8.5.0",
    "gray-matter": "^4.0.3",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.16",
    "postcss-cli": "^10.0.0",
    "prettier": "^2.7.1",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.2",
    "wrangler": "beta",
    "xml": "^1.0.1"
  },
  "engines": {
    "node": ">=14"
  }
}
