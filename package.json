{
  "name": "remix-template-cloudflare-pages",
  "private": true,
  "sideEffects": false,
  "scripts": {
    "build": "run-p build:* && remix build",
    "build:css": "tailwindcss -m -i ./styles/app.css -o app/styles/app.css",
    "build:content": "ts-node ./scripts/buildContent.ts",
    "build:feed": "ts-node ./scripts/buildFeed.ts",
    "dev:remix": "remix watch",
    "dev:wrangler": "cross-env NODE_ENV=development wrangler pages dev ./public",
    "dev": "yarn run build && run-p dev:*",
    "dev:css": "tailwindcss -w -i ./styles/app.css -o app/styles/app.css",
    "start": "cross-env NODE_ENV=production npm run dev:wrangler"
  },
  "lint-staged": {
    "*.{js,ts,tsx}": "eslint --fix",
    "*.{js,ts,tsx,css,json}": "prettier --write"
  },
  "dependencies": {
    "@remix-run/cloudflare": "^1.6.1",
    "@remix-run/cloudflare-pages": "^1.6.1",
    "@remix-run/react": "^1.6.4",
    "cross-env": "^7.0.3",
    "date-fns": "^2.28.0",
    "marked": "^4.0.17",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-syntax-highlighter": "^15.5.0",
    "zod": "^3.17.3"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^3.13.0",
    "@remix-run/dev": "^1.6.1",
    "@remix-run/eslint-config": "^1.6.1",
    "@types/marked": "^4.0.3",
    "@types/react": "^18.0.14",
    "@types/react-dom": "^18.0.5",
    "@types/react-syntax-highlighter": "^15.5.2",
    "@types/xml": "^1.0.8",
    "@typescript-eslint/eslint-plugin": "^5.30.0",
    "@typescript-eslint/parser": "^5.29.0",
    "autoprefixer": "^10.4.7",
    "eslint": "^8.18.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-tailwindcss": "^3.5.2",
    "gray-matter": "^4.0.3",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.14",
    "prettier": "^2.7.1",
    "tailwindcss": "^3.1.4",
    "ts-node": "^10.8.1",
    "typescript": "^4.7.4",
    "wrangler": "beta",
    "xml": "^1.0.1"
  },
  "engines": {
    "node": ">=14"
  }
}
